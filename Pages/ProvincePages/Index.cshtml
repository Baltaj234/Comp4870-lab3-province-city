@page
@model lab3_province_city.Pages.ProvincePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Province[0].ProvinceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province[0].Cities)
            </th>
            <th></th>
        </tr>
    </thead>
   <tbody>
@foreach (var item in Model.Province)
{
    <tr>
        <td>
            @item.ProvinceName
        </td>
        <td>
            @if (item.Cities != null && item.Cities.Any())
            {
                <ul>
                    @foreach (var city in item.Cities)
                    {
                        <li>@city.CityName</li>
                    }
                </ul>
            }
            else
            {
                <span>No cities</span>
            }
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.ProvinceCode">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.ProvinceCode">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.ProvinceCode">Delete</a>
        </td>
    </tr>
}
</tbody>
</table>
